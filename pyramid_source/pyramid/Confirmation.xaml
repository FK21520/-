<Page x:Class="pyramid.DELETECONFIRMATION"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pyramid"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Deleteconfirmation">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="20">
            <TextBlock x:Name="text_block" FontSize="20" Foreground="Black" />
            
            <StackPanel x:Name="colectional_panel" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="はい" Width="50" Height="20" FontSize="10" Click="YesClick"/>
                <Button Content="いいえ" Width="50" Height="20" FontSize="10" Click="NoClick"/>
            </StackPanel>
            
            <Button Content="戻る" Width="50" Height="20" FontSize="10" Click="ReturnButtonClick"/>
        </StackPanel>
    </Grid>
</Page>
