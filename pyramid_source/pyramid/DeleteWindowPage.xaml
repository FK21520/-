<Page x:Class="pyramid.DELETEWINDOWPAGE"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pyramid"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="20">
            <TextBlock Text="どのランキングを消しますか?"
         FontSize="20"
         HorizontalAlignment="Center"
         Margin="0,0,0,20"
         Foreground="Black">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="0" Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="初級" Width="50" Height="20" FontSize="10" Click="StartEasyClick"/>
                <Button Content="中級" Width="50" Height="20" FontSize="10" Click="StartMediumClick"/>
                <Button Content="上級" Width="50" Height="20" FontSize="10" Click="StartHardClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
