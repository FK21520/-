<Page x:Class="pyramid.START"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="StartPage">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/image/start.png" Stretch="UniformToFill" />
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical" Margin="20">
            <Label x:Name="difficulty_label" Content="難易度を選択してください" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               FontSize= "50"
               Margin="0,50,0,0" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                <Button Content="初級" Width="150" Height="50" FontSize="20" Click="StartEasyClick"/>
                <Button Content="中級" Width="150" Height="50" FontSize="20" Click="StartMediumClick"/>
                <Button Content="上級" Width="150" Height="50" FontSize="20" Click="StartHardClick"/>
            </StackPanel>

            <Button Content="データの消去" Width="150" HorizontalAlignment="Right" 
                                            VerticalAlignment="Top" 
                                            Margin="0,10,10,0"
                                            Height="50" FontSize="20" Click="DeleteClick"/>
        </StackPanel>
    </Grid>
</Page>